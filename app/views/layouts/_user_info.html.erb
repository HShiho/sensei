<div>
  <h4 class="text-info">User Info</h4>
  <div>
    <%= link_to public_user_path(user) do %>
      <%= image_tag user.get_icon_image(40,40), class: 'border rounded-circle' %>
      <b><%= user.nickname %>さん</b>
    <% end %>
  </div>
  <div class="pt-2">
    <span>目標 :　</span>
    <span>
      <% if goal.present? %>
        <%= goal.title %>
      <% else %>
        目標が設定されていません
      <% end %>
    </span>
  </div>
</div>