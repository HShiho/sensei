<div class="container row">

  <div class="col-9 my-3 mx-auto">
    <div class="d-flex justify-content-center">
      <div class="h5">ユーザーページ</div>
    </div>

    <div class="col-10  my-5 mx-auto">
      <div class="d-flex bd-highlight my-5">
        <div class="bd-highlight col-5 px-0 text-info">
          ニックネーム
        </div>
        <div class="bd-highlight col-1"></div>
        <div class="flex-grow-1 bd-highlight h5">
          <%= @user.nickname %>
        </div>
      </div>

      <div class="d-flex bd-highlight my-5">
        <div class="bd-highlight col-5 px-0 text-info">
          アイコン画像
        </div>
        <div class="bd-highlight col-1"></div>
        <div class="flex-grow-1 bd-highlight ">
          <%= image_tag @user.get_icon_image(100,100), class: 'border rounded-circle' %>
        </div>
      </div>

      <div class="d-flex bd-highlight mt-5 mb-3">
        <div class="bd-highlight col-5 px-0 text-info">
          メールアドレス
        </div>
        <div class="bd-highlight col-1"></div>
        <div class="flex-grow-1 bd-highlight h5">
          <%= @user.email %>
        </div>
      </div>
    </div>

    <div class="d-flex justify-content-center mb-5">
      <div>
        <%= link_to 'ユーザー情報編集ページへ', edit_admin_user_path(@user), class: 'btn btn-outline-success' %>
      </div>
    </div>

    <div class="d-flex justify-content-around my-5">
      <div class="btn btn-secondary disabled" aria-disabled="true">投稿</div>
      <div><%= link_to '投稿一覧を見る',admin_posts_path(@user.id), class: 'btn btn-outline-secondary' %></div>
      <div><%= link_to 'コメント一覧を見る',admin_post_comments_path(@user.id), class: 'btn btn-outline-secondary' %></div>
    </div>

  </div>

</div>