<div class="border-top border-info pt-3">
  <h5 class="text-info">今日の投稿</h5>

    <%= form_with model: @new_post, url: public_posts_path, method: :post do |f| %>
      <p class="mb-0">達成度</p>
        <div class="form-check form-check-inline achivement-btn d-flex justify-content-around">
          <div>
            <%= f.label Post.achivements_i18n[:good],for: "achivement_excellence", class: 'btn btn-outline-info p-1' do %>
              <i class="fa-regular fa-face-laugh-squint fa-3x"></i><br>
              <span class="h6"><%= Post.achivements_i18n[:excellence] %></span>
            <% end %>
            <%= f.radio_button :achivement, :excellence, checked: true, class: 'btn-check' %>
          </div>
          <div>
            <%= f.label Post.achivements_i18n[:good], for: "achivement_good", class: 'btn btn-outline-info p-1' do  %>
              <i class="fa-regular fa-face-smile fa-3x"></i><br>
              <span class="h6"><%= Post.achivements_i18n[:good] %></span>
            <% end %>
            <%= f.radio_button :achivement, :good, class: 'btn-check' %>
          </div>
          <div>
            <%= f.label Post.achivements_i18n[:almost] , for: "achivement_almost", class: 'btn btn-outline-info p-1' do %>
              <i class="fa-regular fa-face-rolling-eyes fa-3x"></i><br>
              <span class="h6"><%= Post.achivements_i18n[:almost] %></span>
            <% end %>
            <%= f.radio_button :achivement, :almost, class: 'btn-check' %>
          </div>
        </div>

      <p class="mb-0">投稿内容</p>
        <%= f.text_area :body, placeholder:"入力は255字まで",class: 'mx-1 mb-2  px-1 col-12 border border-info',rows: '6' %>

      <p class="mb-0">画像</p>
        <div class="mx-1 mb-2">
          <%= f.file_field :image, accept: "image/*", class: 'mx-1' %>
        </div>

      <p class="mb-0">明日の目標</p>
        <%= f.text_field :tomorrow_objective, placeholder:"入力は20字まで",class: 'mx-1 mb-2 px-1 col-12 border border-info' %>

      <p class="mb-0">タグ</p>
        <div class="mx-1 mb-2">
          <%= f.collection_select :post_tag_id, Tag.all ,:id, :name, :prompt => "選択してください"  %>
        </div>

      <p class="mb-0">公開ステータス</p>
        <div class="form-check form-check-inline">
          <div class="ml-5">
           <%= f.radio_button :is_released,"true", checked: true %> 公開
          </div>
          <div class="ml-5">
            <%= f.radio_button :is_released,"false" %> 非公開
          </div>
        </div>

      <div class="d-flex justify-content-center pt-3">
        <div><%= f.submit "投稿", class: 'btn btn-outline-info' %></div>
      </div>

    <% end %>

</div>