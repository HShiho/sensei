              <%= post.favorites.where(type: 'fight').count %>
            <% end %>
              <% end %>
          </div>
          <div class="border border-info ml-auto px-2 bd-hightlight d-flex align-items-center text-info">
            合計 <%= post.favorites.count %>
          </div>
        </div>

        <div class="d-flex justify-content-end">
          <div class="text-secondary mt-2 mr-3">コメント件数：<%= post.post_comments.count %></div>
          <div><%= link_to 'コメントする',public_post_path(post), class: 'btn btn-outline-secondary mr-3' %></div>
        </div>
      </div>
    <% end %>
  </div>
  </div>
<% end %>

</div>