<div class="d-flex justify-content-center">
  <div class="h4 text-info">中期目標設定ページ</div>
</div>

<div class="d-flex justify-content-center mt-3">
  <div class="h6 text-secondary">最終目標　：　<%= @goal.title %></div>
</div>

<%= form_with model: @objective, url: public_objectives_path, method: :post do |f| %>
  <div class="m-3">
    <%= render 'layouts/error_messages', model: f.object, attribute: :title %>
    <div class="d-flex bd-highlight">
      <div class="text-info h5 bd-highlight pt-1">今月の目標　</div>
      <div class="col-8 bd-highlight flex-grow-1"><%= f.text_field :title, class: 'p-1 col-12', placeholder:"例）参考書を1冊3周する！" %></div>
      <%= f.hidden_field :goal_id, :value => @goal.id %>
      <%= f.hidden_field :period_genre, :value => [:month] %>
      <div class="bd-highlight"><%= f.submit 'この目標にする', class: 'btn btn-info' %></div>
    </div>
  </div>
<% end %>

<%= form_with model: @objective, url: public_objectives_path, method: :post do |f| %>
  <div class="m-3 mt-5">
    <%= render 'layouts/error_messages', model: f.object, attribute: :title %>
    <div class="d-flex bd-highlight">
      <div class="text-info h5 bd-highlight pt-1"> 今週の目標　</div>
      <div class="col-8 bd-highlight flex-grow-1"><%= f.text_field :title, class: 'p-1 col-12', placeholder:"例）英単語150語覚える！" %></div>
      <%= f.hidden_field :goal_id, :value => @goal.id %>
      <%= f.hidden_field :period_genre, :value => [:week] %>
      <div class="bd-highlight"><%= f.submit 'この目標にする', class: 'btn btn-info' %></div>
    </div>
  </div>
<% end %>

<div class="my-5 col-2 mx-auto">
    <%= link_to 'TOPに戻る', public_root_path, class: 'btn btn-outline-info' %>
</div>

<% if @objective.errors.any? %>
  <script type="text/javascript">
    $(document).ready(function() {
      history.pushState('', '', '/public/objectives/new')
    });
  </script>
<% end %>