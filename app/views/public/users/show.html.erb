<div class="container row">

  <!--サイドバー-->
  <div class="col-3 mb-5 border-right border-info">
    <%= render partial: 'layouts/user_info',locals: { user: @user,goal: @goal } %><br>
  </div>

  <div class="col-8 my-3">
    <div class="d-flex justify-content-center">
      <div class="h5">ユーザーページ</div>
    </div>

    <div class="col-10  my-5 mx-auto">
      <div class="d-flex bd-highlight my-5">
        <div class="bd-highlight col-4 px-0 text-info">
          ニックネーム
        </div>
        <div class="flex-grow-1 bd-highlight h5">
          <%= @user.nickname %>
        </div>
      </div>

      <div class="d-flex bd-highlight my-5">
        <div class="bd-highlight col-4 px-0 text-info">
          アイコン画像
        </div>
        <div class="flex-grow-1 bd-highlight ">
          <%= image_tag @user.get_icon_image(100,100), class: 'border rounded-circle' %>
        </div>
      </div>

      <% if @user == @current_user %>
        <div class="d-flex bd-highlight my-5">
          <div class="bd-highlight col-4 px-0 text-info">
            メールアドレス
          </div>
          <div class="flex-grow-1 bd-highlight h5">
            <%= @user.email %>
          </div>
        </div>
      <% end %>

      <div class="d-flex bd-highlight my-5">
        <div class="bd-highlight col-4 px-0 text-info">
          目標
        </div>
        <div class="flex-grow-1 bd-highlight h5">
          <% if @goal.present? %>
            <%= @goal.title %>
          <% else %>
            目標が設定されていません　<%= link_to '設定する', new_public_goal_path, class: 'btn btn-outline-info' %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="d-flex justify-content-center mb-4">
      <% if @user == @current_user %>
        <div>
          <%= link_to 'ユーザー情報編集ページへ', edit_public_user_path(@user), class: 'btn btn-outline-success' %>
        </div>
      <% end %>
      <div class="d-flex justify-content-end">
          <div><%= link_to 'ユーザーの投稿一覧を見る',public_user_posts_path(@user.id), class: 'btn btn-outline-secondary ml-5' %></div>
        </div>
    </div>

  </div>

</div>