<div class="d-flex justify-content-center">
  <div class="h4 text-info">お問い合わせ情報確認画面</div>
</div>
<div class="p-5">
  <table>
    <tbody>
      <tr>
        <td class="text-info">ご用件　　</td>
        <td><%= @inquiry.subject_i18n %></td>
      </tr>
      <tr>
        <td class="text-info">返信用メールアドレス　　</td>
        <td><%= @inquiry.reply_mail %></td>
      </tr>
      <tr>
        <td class="text-info">お問い合わせ内容　　</td>
        <td style="white-space: pre-wrap;"><%= @inquiry.body %></td>
      </tr>
    </tbody>
</table>
</div>

<div class="d-flex justify-content-around mb-5">
  <%= form_with model: @inquiry, url: public_inquiries_path, method: :post do |f| %>
    <%= f.hidden_field :reply_mail %>
    <%= f.hidden_field :subject %>
    <%= f.hidden_field :body %>
    <%= f.hidden_field :user_id %>
  <div><%= f.submit '送信',class: 'btn btn-outline-success' %></div>
  <% end %>

  <%= form_with model: @inquiry, url: public_mail_back_path, method: :post do |f| %>
    <%= f.hidden_field :reply_mail %>
    <%= f.hidden_field :subject %>
    <%= f.hidden_field :body %>
    <%= f.hidden_field :user_id %>
  <div><%= f.submit '入力画面に戻る',class: 'btn btn-outline-primary' %></div>
  <% end %>
</div>