<div class="row">

  <!--サイドバー-->
  <div class="col-3 mb-5 border-right border-info">
    <%= render partial: 'layouts/user_info',locals: { user: @user, goal: @goal } %><br>
    <%= form_tag({controller:"topics",action:"index"}, method: :get) do %>
      <%= render partial: 'layouts/tag_search' %>
    <% end %>
  </div>


  <div class="col-9">
    <div class="d-flex justify-content-center">
      <div class="h5">新しいトピック</div>
    </div>
    <%= render partial: 'new',lacals: { topic: @topic, topic: @topic_comment } %>

    <div class="d-flex justify-content-center border-top border-info">
      <div class="h5 pt-4">すべてのトピック</div>
    </div>
    <div class="d-flex flex-column">
      <% @topics.each do |topic| %>
        <div>
          <%= topic.title %>
          <%= topic.topic_comments.each do |comment| %>
            <%= comment.body %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

</div>